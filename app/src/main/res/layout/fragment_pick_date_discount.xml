<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/new_default_background_color"
        tools:context=".ui.main.account.discount.pickDate.PickDateDiscountFragment">



    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            >

        <LinearLayout
                android:id="@+id/pick_start_date"
                android:padding="16dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dark"
                    android:textSize="18sp"
                    android:text="Start date"
                    />

            <TextView
                    android:id="@+id/start_date_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/bleu_dark"
                    android:textSize="18sp"
                    android:text="xxxx-xx-xx  xx:xx"
                    android:gravity="right"
                    />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/pick_end_date"
                android:padding="16dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dark"
                    android:textSize="18sp"
                    android:text="End date"
                    />

            <TextView
                    android:id="@+id/end_date_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/bleu_dark"
                    android:textSize="18sp"
                    android:text="xxxx-xx-xx  xx:xx"
                    android:gravity="right"
                    />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>