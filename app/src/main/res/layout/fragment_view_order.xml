<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:context=".ui.main.order.order.ViewOrderFragment">


<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
       >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:orientation="horizontal"
            android:background="@color/white"
            android:gravity="start">

        <LinearLayout
                android:id="@+id/back_button"
                android:paddingStart="20dp"
                android:paddingEnd="10dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackground">

            <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/ic_baseline_arrow_back_ios_dark"
                    />

        </LinearLayout>

        <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Order"
                android:textColor="@color/dark"
                android:textSize="22sp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:layout_weight="1"
                />


    </LinearLayout>

    <LinearLayout
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/view_order_type_delivery"
                android:layout_weight="1"
                android:visibility="gone"
                >
            <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/delivery_man"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    android:layout_margin="3dp"
                    />
        </LinearLayout>

        <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/view_order_type_self_pickup"
                android:layout_weight="1"
                android:visibility="gone"
                >
            <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/package_man"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    android:layout_margin="3dp"

                    />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Order ID: "
                android:textSize="14sp"
                android:layout_gravity="center"
                />

        <TextView
                android:id="@+id/view_order_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12894"
                android:textSize="14sp"
                android:textColor="#000"
                android:layout_gravity="center"
                />

    </LinearLayout>

    <LinearLayout
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Order Time: "
                android:textSize="14sp"
                android:layout_gravity="center"
                />

        <TextView
                android:id="@+id/view_order_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2021-03-31 14:59"
                android:textSize="14sp"
                android:textColor="#000"
                android:layout_gravity="center"
                />

    </LinearLayout>

    <LinearLayout
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Order Type: "
                android:textSize="14sp"
                android:layout_gravity="center"
                />

        <TextView
                android:id="@+id/view_order_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="XXX"
                android:textSize="14sp"
                android:textColor="#000"
                android:layout_gravity="center"
                />

    </LinearLayout>

    <LinearLayout
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Order Receiver: "
                android:textSize="14sp"
                android:layout_gravity="center"
                />

        <TextView
                android:id="@+id/view_order_receiver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="XXX"
                android:textSize="14sp"
                android:textColor="#000"
                android:layout_gravity="center"
                />

    </LinearLayout>

    <LinearLayout
            android:id="@+id/view_order_delivery_address_container"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delivery Address: "
                android:textSize="14sp"
                android:layout_gravity="center"
                />

        <TextView
                android:id="@+id/view_order_delivery_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="XXX"
                android:textSize="14sp"
                android:textColor="#000"
                android:layout_gravity="center"
                />
    </LinearLayout>

    <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp">

        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/view_order_products_recycler_view"
                android:scrollbars="none"

                />



        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/new_default_background_color"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Quantity:"
                    android:textSize="14sp"
                    android:padding="3dp"
                    android:layout_weight="1"
                    />

            <TextView
                    android:id="@+id/view_order_product_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="3dp"
                    android:text="1"
                    android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Total amount:"
                    android:textSize="14sp"
                    android:padding="3dp"
                    android:layout_weight="1"
                    />

            <TextView
                    android:id="@+id/view_order_product_total"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="3dp"
                    android:text="2600"
                    android:textColor="@color/red"
                    android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Paid amount:"
                    android:textSize="14sp"
                    android:padding="3dp"
                    android:layout_weight="1"
                    />

            <TextView
                    android:id="@+id/view_order_product_paid"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="3dp"
                    android:text="2600"
                    android:textColor="@color/red"
                    android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Rest amount:"
                    android:textSize="14sp"
                    android:padding="3dp"
                    android:layout_weight="1"
                    />

            <TextView
                    android:id="@+id/view_order_product_rest"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="3dp"
                    android:text="2600"
                    android:textColor="@color/red"
                    android:textSize="14sp" />
        </LinearLayout>


        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/new_default_background_color"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>
        <LinearLayout
                android:id="@+id/add_note_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Note:"
                    android:textSize="14sp"
                    android:padding="3dp"
                    android:layout_weight="1"
                    />

            <TextView
                    android:id="@+id/view_order_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add note"
                    android:textSize="14sp"
                    android:textColor="#000"
                    android:layout_gravity="center"
                    />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
            android:id="@+id/view_order_NEW_ORDER_buttons"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:layout_margin="16dp"
            android:orientation="horizontal"
            android:visibility="gone">
        <Button
                android:id="@+id/view_order_reject"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/radius_button_white_border"
                android:text="Reject"
                android:textAllCaps="false"
                android:textColor="@color/bleu"
                android:textSize="17sp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"/>

        <Button
                android:id="@+id/view_order_accept"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/radius_button_blue"
                android:text="Accept"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:layout_gravity="bottom"
                android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/view_order_ACCEPT_ORDER_buttons"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:layout_margin="16dp"
            android:orientation="horizontal"
            android:visibility="gone"
            >
        <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/radius_button_white_border"
                android:text="Problem"
                android:textAllCaps="false"
                android:textColor="@color/bleu"
                android:textSize="17sp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"/>

        <Button
                android:id="@+id/view_order_ready"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/radius_button_blue"
                android:text="Ready"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:layout_gravity="bottom"
                android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/view_order_READY_ORDER_buttons"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:layout_margin="16dp"
            android:orientation="horizontal"
            android:visibility="gone"
            >
        <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/radius_button_white_border"
                android:text="Problem"
                android:textAllCaps="false"
                android:textColor="@color/bleu"
                android:textSize="17sp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"/>

        <Button
                android:id="@+id/view_order_picked_up"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/radius_button_blue"
                android:text="Picked up"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:visibility="gone"/>

        <Button
                android:id="@+id/view_order_delivered"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/radius_button_blue"
                android:text="Delivered"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:visibility="gone"/>
    </LinearLayout>

</LinearLayout>
</androidx.core.widget.NestedScrollView>