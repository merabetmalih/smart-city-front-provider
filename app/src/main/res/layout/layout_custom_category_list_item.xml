<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        >


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:id="@+id/container1"
            android:layout_margin="10dp"
            >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/custom_category_name"
                android:text="The Title of a Blog"
                android:textColor="@color/dark"
                android:textSize="19sp"
                android:textStyle="bold"
                android:layout_weight="1"
                />

        <ImageButton
                android:id="@+id/update_custom_category"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_outline_create_24"
                android:layout_marginRight="10dp"
                />

        <ImageButton
                android:id="@+id/delete_custom_category"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_baseline_delete_outline_24"
                android:layout_marginRight="10dp"
                />

    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/default_background_color"/>


</LinearLayout>