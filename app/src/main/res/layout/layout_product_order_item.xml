<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        >

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/new_default_background_color"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardCornerRadius="5dp"
                android:layout_margin="3dp"
                app:cardElevation="0dp"
                >
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/order_product_image"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_empty_image"
                    android:scaleType="fitXY"
                    />
        </androidx.cardview.widget.CardView>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/container1"
                android:layout_weight="1"
                >
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/order_product_name"
                    android:text="ble LED Ring"
                    android:textSize="14sp"
                    android:textColor="#000"
                    android:padding="3dp"
                    />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                   >
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/order_product_price"
                            android:text="2000.0"
                            android:textSize="18sp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:paddingStart="3dp"
                            android:paddingEnd="3dp"
                            />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ã—"
                            android:textSize="18sp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:paddingStart="3dp"
                            android:paddingEnd="3dp"
                            />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/order_product_quantity"
                            android:text="2"
                            android:textSize="18sp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:paddingStart="3dp"
                            android:paddingEnd="3dp"
                            />
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/discount_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="3dp"
                        >
                    <TextView

                            android:id="@+id/product_old_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$ 300.00"
                            android:textSize="14sp"
                            android:background="@drawable/strike"
                            android:paddingStart="3dp"
                            android:paddingEnd="3dp"
                            />

                    <TextView

                            android:id="@+id/discount_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/red_sale"
                            android:text="-20%"
                            android:textSize="12sp"
                            android:paddingStart="3dp"
                            android:textStyle="bold"
                            />

                </LinearLayout>


            </LinearLayout>


            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/order_product_variant"
                    android:text="ble LED Ring"
                    android:textSize="13sp"
                    android:padding="3dp"
                    />


        </LinearLayout>
    </LinearLayout>


</LinearLayout>